# AI Comparison Showcase Environment Variables
# Copy this file to .env.local for local development

# Base URL - Required for production
NEXT_PUBLIC_BASE_URL=https://your-domain.vercel.app

# API Keys (Optional - for demo features)
# These are optional and only needed if you want to enable live API demos
# In production, consider using Vercel Edge Config or environment variables
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
PERPLEXITY_API_KEY=

# Analytics (Optional)
# Vercel Analytics is automatically configured if deployed on Vercel
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_DEMOS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=10
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000

# Development
NODE_ENV=production